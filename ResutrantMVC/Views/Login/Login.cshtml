
@{
    ViewBag.Title = "Login";
}



<div class="container">
    <div class="row">
        <div class="col-md-12" style="font-size:20px;">
            <h1 class="caption">Login </h1>
            <hr />
            <form action="LoginCheck" method="post" cellspacing="10px">
                <div class="form-group">
                    <label>Enter Name </label>
                    <input id="Name" name="Name" type="email" class="form-control-lg" placeholder="Enter User Name" required="" />
                </div>

                <div class="form-group">
                    <label>Enter Email </label>
                    <input id="Password" name="Password" type="password" class="form-control-lg" placeholder="Enter Password" required="" />
                </div>

                <input id="submit" name="submit" type="submit" value="Sign Up" class="btn btn-primary" style="padding:10px;font-size:15px;" />


            </form>

        </div>

    </div>

</div>

